<%- cache(element) do -%>

  <section id="dh-slider" class="dh-section dh-slider carousel slide"
    data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% element.contents.gallery_pictures.size.times do |index| %>
        <li data-target="#dh-slider" data-slide-to="<%= index %>"
          class="<%= "active" if index == 0 %>"></li>
      <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <%= render(partial: '/shared/image_slider_element',
                 collection: element.contents.gallery_pictures) %>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#dh-slider" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#dh-slider" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </section>

<%- end -%>
