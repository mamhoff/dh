<%- cache(element) do -%>

  <div id="dh-slider" class="dh-slider carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% element.contents.gallery_pictures.size.times do |index| %>
        <% active_class = index == 0 ? "active" : "" %>
        <li data-target="#dh-slider" data-slide-to="<%= index %>"
          class="<%= active_class %>"></li>
      <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <% element.contents.gallery_pictures.each_with_index do |picture, index| %>
        <% active_class = index == 0 ? " active" : "" %>
        <div class="item<%= active_class %>">
          <%= render_essence_view(picture, {image_size: '600x400'}) %>
        </div>
      <% end %>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#dh-slider" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#dh-slider" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<%- end -%>
