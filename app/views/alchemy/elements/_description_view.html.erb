<%- cache(element) do -%>
  <article class="dh-element dh-description">

    <h2 class="dh-description-title"><%= element.ingredient('title') %></h2>

    <% if element.has_ingredient?('year')
         year = element.ingredient('year').year %>
      <p class="dh-description-year">
        <time datetime="<%= year %>"><%= year %></time>
      </p>
    <% end %>

    <p class="dh-description-media"><%= element.ingredient('media') %></p>

    <section class="dh-description-body">
      <%= raw element.ingredient('body') %>
    </section>

  </article>

<%- end -%>
