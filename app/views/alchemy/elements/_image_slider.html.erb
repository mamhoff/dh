<%- cache(image_slider) do -%>

  <article id="dh-slider" class="dh-element dh-slider carousel slide"
    data-ride="carousel">

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <%= render(partial: '/shared/image_slider_element',
                 collection: image_slider.nested_elements) %>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#dh-slider" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#dh-slider" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </article>

<%- end -%>
