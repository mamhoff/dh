<%- cache(sound) do -%>

  <article class="dh-element dh-sound">

    <% if sound.essence_files.any? %>
      <audio controls="controls">
        <% sound.essence_files.each do |essence_file| %>
          <source src="<%= essence_file.attachment_url %>" />
        <% end %>
      </audio>
    <% end %>

    <p>
      Download:

      <% if sound.has_ingredient?('ogg_file') %>
        <%= link_to 'Ogg',
              sound.content_by_name('ogg_file').essence.attachment_url,
              title: 'Download work as an OGG file' %>
      <% end %>

      <% if sound.has_ingredient?('mp3_file') %>
        <%= link_to 'Mp3',
              sound.content_by_name('mp3_file').essence.attachment_url,
              title: 'Download work as an MP3 file' %>
      <% end %>
    </p>

  </article>

<%- end -%>
