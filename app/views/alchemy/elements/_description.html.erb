<%- cache(description) do -%>
  <article class="dh-element dh-description">

    <h2 class="dh-description-title"><%= description.ingredient('title') %></h2>

    <p class="dh-description-year">
      <time datetime="<%= description.ingredient('year') %>">
        <%= description.ingredient('year') %></time>
    </p>

    <p class="dh-description-media"><%= description.ingredient('media') %></p>

    <section class="dh-description-body">
      <%= raw description.ingredient('body') %>
    </section>

  </article>

<%- end -%>
