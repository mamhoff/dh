<main class="dh-works">

  <%= render_elements %>

  <% years_with_pages.each do |key, value| %>
    <section class="year">
      <h2><%= key %></h2>
      <div class="row">
        <% value.each do |page| %>
          <a href="<%= "/#{page.urlname}" %>">
            <figure class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
              <%= render_page_thumbnail(page,
                class: 'dh-works-page-thumbnail') %>
              <figcaption><%= page.title %></figcaption>
            </figure>
          </a>
        <% end %>
      </div>
    </section>
  <% end %>

  <%# TODO: Pagination, if necessary %>

</main>
