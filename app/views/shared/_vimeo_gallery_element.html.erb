<%# Thumbnails are loaded via JavaScript, replacing the hourglass image.
    Thumbnails are 4x3, hopefully. %>
<div class="dh-vimeo-gallery-wrapper col-xs-6 col-sm-4 col-md-3 col-lg-2">
  <%= link_to(extract_vimeo_source(vimeo_gallery_element.ingredient),
    data: { toggle: 'lightbox', gallery: 'vimeo-gallery' }) do %>
    <%= image_tag('hourglass.png', class: 'dh-vimeo-gallery-image',
      data: { id: extract_vimeo_id(vimeo_gallery_element.ingredient) }) %>
    <span class="glyphicon glyphicon-play-circle"></span>
  <% end %>
</div>
